<%- include('templates/header'); -%>
<body style="background-color: #f8f8f8; height: 100vh; flex-direction: column;">
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.5.3/jspdf.debug.js" integrity="sha384-NaWTHo/8YCBYJ59830LTz/P4aQZK1sS0SneOgAvhsIl3zBu8r9RevNg5lHCHAuQ/" crossorigin="anonymous"></script>
  <div class="container mb-5">
    <div class="row">
      <h1 class="text-center display-3 pb-3 pt-3" style="color: #2c2c2c ;">Bem-vindo: <%= nome %></h1>
      <%if(lista.length==0){ %>
        <div class="pt-5 text-center" style="color: #A9A9A9;">
          <h2 class="pt-5 mt-5">Não tem nada aqui ainda <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-emoji-frown" viewBox="0 0 16 16">
          <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
          <path d="M4.285 12.433a.5.5 0 0 0 .683-.183A3.498 3.498 0 0 1 8 10.5c1.295 0 2.426.703 3.032 1.75a.5.5 0 0 0 .866-.5A4.498 4.498 0 0 0 8 9.5a4.5 4.5 0 0 0-3.898 2.25.5.5 0 0 0 .183.683zM7 6.5C7 7.328 6.552 8 6 8s-1-.672-1-1.5S5.448 5 6 5s1 .672 1 1.5zm4 0c0 .828-.448 1.5-1 1.5s-1-.672-1-1.5S9.448 5 10 5s1 .672 1 1.5z"/></svg></h2>
          <a href="/compatibilidade" style="color: #A9A9A9;">Clique aqui para criar um configuraçao para você!</a>
        </div>
          <% }else{ %>
      <h2 class="text-center display-5 pb-5">Histórico do usuário</h2>
      <% } %>
      <% for (var i=0; i < lista.length; i++) { %>
        <% precoTotal=lista[i].precoCpu+lista[i].precoPlacamae+lista[i].precoRam+lista[i].precoPlacavideo+lista[i].precoDiscorigido+lista[i].precoSsd+lista[i].precoCooler+lista[i].precoFonte+lista[i].precoGabinete;
          %>
          <form action="/usuario" method="GET" class="col-md-4 mx-auto text-center pb-5">
            <ul class="list-group list-group-light">
              <li class="list-group-item"><%= lista[i].cpu %> <b>R$:<%= lista[i].precoCpu %></b></li>
              <li class="list-group-item"><%= lista[i].placamae %> <b>R$:<%= lista[i].precoPlacamae %></b></li>
              <li class="list-group-item"><%= lista[i].ram %> <b>R$:<%= lista[i].precoRam %></b></li>
              
              <% if (lista[i].placavideo!="null" ) { %>
              <li class="list-group-item"><%= lista[i].placavideo %> <b>R$:<%= lista[i].precoPlacavideo %></b></li>
              <% } %>

              <% if (lista[i].discorigido!="null" ) { %>
                <li class="list-group-item"><%= lista[i].discorigido %> <b>R$:<%= lista[i].precoDiscorigido %></b></li>
              <% } %>

              <% if (lista[i].ssd!="null" ) { %>
                <li class="list-group-item"><%= lista[i].ssd %> <b>R$:<%= lista[i].precoSsd %></b></li>
              <% } %>

              <% if (lista[i].cooler!="null" ) { %>
                <li class="list-group-item"><%= lista[i].cooler %> <b>R$:<%= lista[i].precoCooler %></b></li>
              <% } %>
              <li class="list-group-item"><%= lista[i].fonte %> <b>R$:<%= lista[i].precoFonte %></b></li>
              <li class="list-group-item"><%= lista[i].gabinete %> <b>R$:<%= lista[i].precoGabinete %></b></li>
              <li class="list-group-item">Preço total: <b>R$<%= Math.round(precoTotal) %></b></li>
          </ul>
            <input name="id" style="display: none ;" value="<%= lista[i].id_config %>">
            <div class="pt-1"><input class="btn btn-outline-dark px-5 m-1" type="submit" value="Excluir"> <button class="m-1 btn btn-dark px-5" value="<%= lista[i].id_config %>" id="botao">Imprimir</button></div>
          </form>
          <% } %>
          
    </div>
  </div>
  </body>
  <div class="pt-5"></div>
  <% if(lista.length>0){ %>
  <footer class="text-center text-white bg1-footer pt-3 mt-5" style="bottom: 0px; flex-grow: 0;">
    <div class="text-center p-2 bg2-footer" style="background-color: #000;">
      <p>Os valores cotados são baseados em um média feita pelos estudantes através do mercado atual</p>
        <p>©Tamc.com</p>
    </div>
</footer>
<% } %>
